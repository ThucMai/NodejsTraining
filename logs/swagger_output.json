                    "example": "Uchiha Itachi"
                  },
                  "email": {
                    "type": "string",
                    "example": "itachi@uchiha.com"
                  },
                  "phone": {
                    "type": "string",
                    "example": "03367876621"
                  },
                  "password": {
                    "type": "string",
                    "example": "thisispassword"
                  }
                },
                "required": [
                  "name",
                  "email",
                  "phone",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully"
          },
          "400": {
            "description": "error message"
          }
        }
      }
    },
