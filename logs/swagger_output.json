      "get": {
        "summary": "This endpoint allows you to get a user by id",
        "description": "Get user by id",
        "components": null,
        "securitySchemes": null,
        "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "responses": {
          "201": {
            "description": "Get user successfully"
          },
          "404": {
            "description": "User not found"
          }
        }
      },
      "put": {
        "summary": "Edit a new user",
        "description": "This endpoint allows you to edit a new user.",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Uchiha Itachi"
                  },
                  "email": {
                    "type": "string",
                    "example": "itachi@uchiha.com"
                  },
                  "phone": {
